FROM node:current-alpine3.22 AS build
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
# Ensure Vite picks the correct API base during production build
# Defaults to "/api" so nginx can proxy to the backend service
ENV VITE_API_BASE_URL=/api
RUN npm run build

FROM nginx:alpine3.22
COPY nginx.conf /etc/nginx/conf.d/default.conf
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
